<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans   http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="dmnEngineConfiguration" class="org.flowable.dmn.engine.impl.cfg.StandaloneDmnEngineConfiguration">

		<property name="jdbcUrl" value="@jdbc.url@" />
    	<property name="jdbcDriver" value="@jdbc.driver@" />
    	<property name="jdbcUsername" value="@jdbc.username@" />
    	<property name="jdbcPassword" value="@jdbc.password@" />
    	<property name="databaseSchema" value="@jdbc.schema@" />
    	
    	<property name="databaseSchemaUpdate" value="drop-create" />
        <property name="historyEnabled" value="true" />
    </bean>
</beans>