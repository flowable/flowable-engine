<?xml version="1.0" encoding="UTF-8"?>
<definitions id="definitions" 
  xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL"
  xmlns:flowable="http://flowable.org/bpmn"
  targetNamespace="Examples">
  
  <process id="asyncServiceTask">
  
    <startEvent id="theStart" />
    
    <sequenceFlow id="flow1" sourceRef="theStart" targetRef="javaService" />
    
    <serviceTask id="javaService" 
                 flowable:class="org.activiti.examples.bpmn.servicetask.ToUppercase"
                 flowable:skipExpression="${execution.getVariable('skip')}"
                 flowable:async="true" />
    
    <sequenceFlow id="flow2" sourceRef="javaService" targetRef="waitState" />
    
    <receiveTask id="waitState" />
    
    <sequenceFlow id="flow3" sourceRef="waitState" targetRef="theEnd" />
    
    <endEvent id="theEnd" />
    
  </process>

</definitions>