            </dependencies>
        </profile>

        <profile>
            <id>db2asynchistory</id>
            <activation>
                <property>
                    <name>databaseasynchistory</name>
                    <value>db2</value>
                </property>
            </activation>
            <dependencies>
                <dependency>
                    <groupId>com.ibm.db2</groupId>
                    <artifactId>jcc</artifactId>
                    <scope>test</scope>
