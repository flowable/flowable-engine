<persistence xmlns="http://java.sun.com/xml/ns/persistence"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
         version="2.0">
  <persistence-unit name="flowable-jpa-pu">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    
    <class>org.flowable.standalone.jpa.FieldAccessJPAEntity</class>
    <class>org.flowable.standalone.jpa.PropertyAccessJPAEntity</class>
    <class>org.flowable.standalone.jpa.SubclassFieldAccessJPAEntity</class>
    <class>org.flowable.standalone.jpa.SubclassPropertyAccessJPAEntity</class>
    <!-- Mapped superclasses -->
    <class>org.flowable.standalone.jpa.MappedSuperClassFieldAccessJPAEntity</class>
    <class>org.flowable.standalone.jpa.MappedSuperClassPropertyAccessJPAEntity</class>
    
    <!-- Variable types -->
    <class>org.flowable.standalone.jpa.ByteIdJPAEntity</class>
    <class>org.flowable.standalone.jpa.ShortIdJPAEntity</class>
    <class>org.flowable.standalone.jpa.IntegerIdJPAEntity</class>
    <class>org.flowable.standalone.jpa.LongIdJPAEntity</class>
    <class>org.flowable.standalone.jpa.FloatIdJPAEntity</class>
    <class>org.flowable.standalone.jpa.DoubleIdJPAEntity</class>
    <class>org.flowable.standalone.jpa.CharIdJPAEntity</class>
    <class>org.flowable.standalone.jpa.StringIdJPAEntity</class>
    <class>org.flowable.standalone.jpa.DateIdJPAEntity</class>
    <class>org.flowable.standalone.jpa.SQLDateIdJPAEntity</class>
    <class>org.flowable.standalone.jpa.BigIntegerIdJPAEntity</class>
    <class>org.flowable.standalone.jpa.BigDecimalIdJPAEntity</class>
    
    <!-- Exceptional entities -->
    <class>org.flowable.standalone.jpa.CompoundIdJPAEntity</class>
    <class>org.flowable.standalone.jpa.EmbeddableCompoundId</class>
    
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="hibernate.connection.url" value="jdbc:h2:mem:flowable-jpa;DB_CLOSE_DELAY=1000;MVCC=TRUE"/>
      <property name="hibernate.connection.driver_class" value="org.h2.Driver"/>
      <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
      <property name="hibernate.connection.username" value="sa"/>
      <property name="hibernate.connection.password" value=""/>
      <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
    </properties>
  </persistence-unit>
</persistence>